<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tiongradua.graduationproject.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#03cbae"
        android:paddingTop="10dp"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/search_back"
            android:layout_width="30dp"
            android:src="@drawable/icon_back"
            android:layout_height="30dp" />
        <LinearLayout
            android:id="@+id/home_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="15dp"
            android:layout_weight="1"
            android:background="@drawable/home_search_shape">
            <ImageView
                android:layout_width="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_search"
                android:scaleType="fitCenter"
                android:layout_height="25dp" />
            <EditText
                android:id="@+id/home_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:textColor="#03cbae"
                android:textSize="15sp"
                android:focusable="true"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:hint="请输入要查询的内容"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_height="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门搜索"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:textColor="#3d3c3c"/>
        <com.example.tiongradua.graduationproject.MyFlowLayout
            android:id="@+id/hotSearchLinear"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索历史"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:textColor="#3d3c3c"/>
            <ImageView
                android:id="@+id/Image_hisSearchClean"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_clean"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <com.example.tiongradua.graduationproject.MyFlowLayout
            android:id="@+id/hotSearchLinear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>
