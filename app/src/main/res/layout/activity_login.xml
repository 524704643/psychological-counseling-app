<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.example.tiongradua.graduationproject.LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#03cbae">
        <RelativeLayout
            android:id="@+id/LoginLayoutBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="15dp">
            <ImageView
                android:id="@+id/login_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/icon_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:layout_toRightOf="@+id/login_back"
                android:textColor="#fff"
                android:layout_alignBaseline="@+id/login_back"
                android:textSize="19sp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录/注册"
            android:textSize="22sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:scaleType="fitStart"
        android:src="@drawable/bg_login2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            style="@style/LoginAndRegisterIconLayoutStyle">
            <TextView
                android:id="@+id/Tv_login"
                android:text="登录"
                style="@style/LoginAndRegisterIconTextStyle"/>
            <View
                android:id="@+id/View_login"
                android:background="@color/colorPrimary"
                style="@style/LoginAndRegisterIconViewStyle"/>
            <ImageView
                android:id="@+id/Iv_login"
               style="@style/LoginAndRegisterIconImageViewStyle"/>
        </LinearLayout>
        <LinearLayout
           style="@style/LoginAndRegisterIconLayoutStyle">
            <TextView
                android:id="@+id/Tv_register"
                android:text="注册"
                style="@style/LoginAndRegisterIconTextStyle"/>
            <View
                android:id="@+id/View_register"
                style="@style/LoginAndRegisterIconViewStyle" />
            <ImageView
                android:id="@+id/Iv_register"
                style="@style/LoginAndRegisterIconImageViewStyle"/>
        </LinearLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>
</LinearLayout>
