<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleImageView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <com.example.tiongradua.graduationproject.HeadPicture.CircleImageView
                android:id="@+id/topic_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/mine_login_pig"
                CircleImageView:border_width="1dp"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/topic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="匿名"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/topic_photo"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/topic_title"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            android:text="标题"/>
        <TextView
            android:id="@+id/topic_content"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="5"
            android:textColor="#282828"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.3"
            android:text="人生就像海洋，只有不断努力，才能到达成功的彼岸人生就像海洋，只有不断努力，才能到达成功的彼岸人生就像海洋，只有不断努力，才能到达成功的彼岸人生就像海洋，只有不断努力，才能到达成功的彼岸人生就像海洋，只有不断努力，才能到达成功的彼岸"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/topic_readCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="5"
                android:layout_centerVertical="true"
                android:text="阅读：2"/>
            <LinearLayout
                android:id="@+id/topic_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_comment"/>
                <TextView
                    android:id="@+id/topic_commentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"
                    android:text="评论"/>
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>
    <View
        style="@style/MineDividerStyle"/>
    <LinearLayout
        android:visibility="gone"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/psy_Tv1"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="哈哈哈哈哈哈dssdsdssdsdssdsdsdsdsdsds哈哈哈"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/psy_Tv2"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="哈哈哈哈哈哈dssdsdssdsdssdsdsdsdsdsds哈哈哈"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/psy_Tv3"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="哈哈哈哈哈哈dssdsdssdsdssdsdsdsdsdsds哈哈哈"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/psy_Tv4"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#9536cc"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="全部评论"/>
    </LinearLayout>
    <View
        style="@style/DividerLongStyle"/>
</LinearLayout>