<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:CircleImageView="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.tiongradua.graduationproject.HeadPicture.CircleImageView
                android:id="@+id/comment_photo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/mine_login_pig"
                CircleImageView:border_width="1dp" />

            <LinearLayout
                android:id="@+id/comment_isSpecialistLinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/comment_photo"
                android:layout_marginTop="-8dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/specialist_shape"
                android:padding="2dp"
                android:layout_alignBaseline="@+id/comment_photo"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="咨询师"
                    android:textColor="#999"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/comment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/comment_photo"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/comment_photo"
                android:text="匿名"
                android:textColor="#333333"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/comment_sex"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/comment_name"
                android:src="@drawable/icon_man" />

            <TextView
                android:id="@+id/comment_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/comment_photo"
                android:layout_toRightOf="@+id/comment_photo"
                android:text="时间"
                android:textColor="#999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comment_time"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/comment_photo"
                android:lineSpacingMultiplier="1.3"
                android:text="人生就像海洋努力，岸人生就像海只有不断努力，才能到达成功的彼岸"
                android:textColor="#282828"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/comment_recontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comment_content"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/comment_photo"
                android:background="#44edc9ed"
                android:lineSpacingMultiplier="1.3"
                android:padding="10dp"
                android:text="人生就像海洋努力，只有不断努力，才能到达成功的彼岸"
                android:textColor="#282828"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/comment_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_comment"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d6d5d5"/>
</LinearLayout>