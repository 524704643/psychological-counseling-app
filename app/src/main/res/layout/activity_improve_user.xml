<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:CircleImageView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.tiongradua.graduationproject.ImproveUserActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="25dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="25sp"
                        android:textColor="#5b5b5b"
                        android:text="用户信息完善"/>
                    <View
                        android:layout_alignParentBottom="true"
                        style="@style/MineDividerStyle"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="95dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="20sp"
                        android:textColor="#5b5b5b"
                        android:text="请设置头像:"/>
                    <com.example.tiongradua.graduationproject.HeadPicture.CircleImageView
                        android:id="@+id/photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        CircleImageView:border_width="2dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/mine_login_pig" />
                    <View
                        android:layout_alignParentBottom="true"
                        style="@style/MineDividerStyle"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:textSize="20sp"
                        android:textColor="#5b5b5b"
                        android:text="请设置昵称:"/>
                    <EditText
                        android:id="@+id/Im_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:layout_toRightOf="@+id/name"
                        />
                    <View
                        android:layout_alignParentBottom="true"
                        style="@style/MineDividerStyle"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:id="@+id/sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:textSize="20sp"
                        android:textColor="#5b5b5b"
                        android:text="请选择性别:"/>
                    <RadioGroup
                        android:id="@+id/Im_RadioGroup"
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/sex"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:layout_height="40dp">
                        <RadioButton
                            android:id="@+id/Im_radio1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#5b5b5b"
                            android:checked="true"
                            android:layout_marginRight="40dp"
                            android:text="男"/>
                        <RadioButton
                            android:id="@+id/Im_radio2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20dp"
                            android:textColor="#5b5b5b"
                            android:text="女"/>
                    </RadioGroup>
                    <View
                        android:layout_alignParentBottom="true"
                        style="@style/MineDividerStyle"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:id="@+id/profession"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:textSize="20sp"
                        android:textColor="#5b5b5b"
                        android:text="请选择职业:"/>
                    <Spinner
                        android:id="@+id/Im_profession"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/profession">
                    </Spinner>
                    <View
                        android:layout_alignParentBottom="true"
                        style="@style/MineDividerStyle"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/introduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:textSize="20sp"
                        android:textColor="#5b5b5b"
                        android:text="简            介:"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <EditText
                        android:id="@+id/Im_introduce"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:inputType="textMultiLine"
                        android:textSize="20sp"
                        android:gravity="left|top"
                        android:background="@drawable/mine_login_shape"/>
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/Im_button"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:text="确定"
                android:textSize="25sp"
                android:textColor="#fff"
                android:background="@color/colorPrimaryDark"
                android:layout_height="45dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
