<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f5f5"
    tools:context="com.example.tiongradua.graduationproject.SettingActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_height="70dp">
        <LinearLayout
            android:id="@+id/setting_back"
            android:layout_width="40dp"
            android:layout_centerVertical="true"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_back2"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#707070"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:text="设置"/>
    </RelativeLayout>
    <View
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e6e6"
        android:layout_alignParentBottom="true"
        >
    </View>

    <RelativeLayout
        style="@style/InfoLinearStyle">
        <TextView
            android:id="@+id/setting_phone"
            style="@style/InfoTextStyle"
            android:layout_toLeftOf="@+id/phone_comming"
            android:text="13711****95"/>
        <TextView
            style="@style/InfoTextStyle"
            android:text="手机号"/>
        <ImageView
            android:id="@+id/phone_comming"
            style="@style/MineThreeItemImage2Style"/>
    </RelativeLayout>
    <RelativeLayout
        style="@style/InfoLinearStyle">
        <TextView
            android:id="@+id/setting_modify"
            style="@style/InfoTextStyle"
            android:layout_toLeftOf="@+id/modify_comming"
            android:text="去修改"/>
        <TextView
            style="@style/InfoTextStyle"
            android:text="修改密码"/>
        <ImageView
            android:id="@+id/modify_comming"
            style="@style/MineThreeItemImage2Style"/>
    </RelativeLayout>

    <RelativeLayout
        style="@style/InfoLinearStyle">
        <TextView
            style="@style/InfoTextStyle"
            android:text="消息设置"/>
        <ImageView
            android:id="@+id/xiaoxi_comming"
            style="@style/MineThreeItemImage2Style"/>
    </RelativeLayout>

    <RelativeLayout
        style="@style/InfoLinearStyle">
        <TextView
            style="@style/InfoTextStyle"
            android:text="黑名单管理"/>
        <ImageView
            android:id="@+id/block_comming"
            style="@style/MineThreeItemImage2Style"/>
    </RelativeLayout>

    <View
        style="@style/MineDividerLongWidthStyle"/>

    <RelativeLayout
        android:id="@+id/setting_quitLayout"
        style="@style/InfoLinearStyle">
        <TextView
            android:layout_centerInParent="true"
            style="@style/InfoTextStyle"
            android:text="退出"/>

    </RelativeLayout>
</LinearLayout>
