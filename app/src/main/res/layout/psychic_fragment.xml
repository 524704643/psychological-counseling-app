<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tiongradua.graduationproject.Fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        android:background="#03cbae">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动态"
            android:textColor="#fffafa"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/newLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/newTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f43a3a"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:text="最新"/>
            <View
                android:id="@+id/newView1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="#f43a3a"/>
        </RelativeLayout>
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/hotLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/hotTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5b5b5b"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:text="最热"/>
            <View
                android:id="@+id/hotView1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:background="#f43a3a"/>
        </RelativeLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/psy_viewpaper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

</LinearLayout>
