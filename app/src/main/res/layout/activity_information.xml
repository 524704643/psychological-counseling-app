<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:CircleImageView="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f5f5"
    tools:context="com.example.tiongradua.graduationproject.InformationActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_height="70dp">
        <LinearLayout
            android:id="@+id/info_back"
            android:layout_width="40dp"
            android:layout_centerVertical="true"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_back2"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#707070"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:text="个人资料"/>
    </RelativeLayout>
        <View
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e7e6e6"
            android:layout_alignParentBottom="true"
            >
        </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="1dp"
        android:layout_height="70dp">
        <TextView
            style="@style/InfoTextStyle"
            android:text="头像"/>
        <com.example.tiongradua.graduationproject.HeadPicture.CircleImageView
            android:id="@+id/info_photo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/mine_login_pig"
            CircleImageView:border_width="1dp"
            android:layout_toLeftOf="@+id/info_comming"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/info_comming"
            style="@style/MineThreeItemImage2Style"/>
    </RelativeLayout>
    <RelativeLayout
        style="@style/InfoLinearStyle">
        <TextView
            android:id="@+id/info_name"
            style="@style/InfoTextStyle"
            android:layout_toLeftOf="@+id/name_comming"
            android:text="何必丶再以"/>
        <TextView
            style="@style/InfoTextStyle"
            android:text="昵称"/>
        <ImageView
            android:id="@+id/name_comming"
            style="@style/MineThreeItemImage2Style"/>
    </RelativeLayout>

    <RelativeLayout
        style="@style/InfoLinearStyle">
        <TextView
            android:id="@+id/info_sex"
            style="@style/InfoTextStyle"
            android:layout_toLeftOf="@+id/sex_comming"
            android:text="男"/>
        <TextView
            style="@style/InfoTextStyle"
            android:text="性别"/>
        <ImageView
            android:id="@+id/sex_comming"
            style="@style/MineThreeItemImage2Style"/>
    </RelativeLayout>
    <View
        style="@style/MineDividerLongWidthStyle"/>
    <RelativeLayout
        style="@style/InfoLinearStyle">
        <TextView
            android:id="@+id/info_profession"
            style="@style/InfoTextStyle"
            android:layout_toLeftOf="@+id/profession_comming"
            android:hint="请选择" />
        <TextView
            style="@style/InfoTextStyle"
            android:text="职业"/>
        <ImageView
            android:id="@+id/profession_comming"
            style="@style/MineThreeItemImage2Style"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/xueliLinear"
        style="@style/InfoLinearStyle"
        android:visibility="gone">
        <TextView
            android:id="@+id/info_xueli"
            style="@style/InfoTextStyle"
            android:layout_toLeftOf="@+id/xueli_comming"
            android:text="本科"/>
        <TextView
            style="@style/InfoTextStyle"
            android:text="学历"/>
        <ImageView
            android:id="@+id/xueli_comming"
            style="@style/MineThreeItemImage2Style"/>
    </RelativeLayout>
    <RelativeLayout
        style="@style/InfoLinearStyle">
        <TextView
            style="@style/InfoTextStyle"
            android:text="简介"/>
        <ImageView
            android:id="@+id/introduce_comming"
            style="@style/MineThreeItemImage2Style"/>
    </RelativeLayout>
</LinearLayout>
