<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainSecondLinear">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MainSecondLinearImage">
        <item name="android:layout_width">30dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="MainSecondLinearTextview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--第二层样式-->
    <style name="MineTwoItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--第二层里图片样式-->
    <style name="MineTwoItemImageStyle">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <!--第二层文字样式-->
    <style name="MineTwoItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
    </style>
    <!--粗分割线-->
    <style name="MineDividerLongWidthStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#ededed</item>
        <item name="android:layout_height">15dp</item>
    </style>

    <style name="DividerLongStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#ededed</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <!--细分割线-->
    <style name="MineDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#ededed</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!--第三层样式-->
    <style name="MineThreeItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/mine_item_selector</item>
    </style>
    <!--第三层图片样式-->
    <style name="MineThreeItemImage1Style">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <!--第三层文字样式-->
    <style name="MineThreeItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#5b5b5b</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--第三层进入箭头样式-->
    <style name="MineThreeItemImage2Style">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/icon_comming</item>
    </style>

    <!--ViewPager滑动图标布局样式-->
    <style name="LoginAndRegisterIconLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LoginAndRegisterIconTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#03cbae</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LoginAndRegisterIconViewStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">3dp</item>
    </style>

    <style name="LoginAndRegisterIconImageViewStyle">
        <item name="android:layout_width">15dp</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:src">@drawable/icon_arrow_bottom</item>
    </style>


    <style name="InfoTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#585757</item>
    </style>

    <style name="InfoLinearStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">#fff</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>
    <!-- my loading dialog -->
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- popup window 显示消失动画-->
    <style name="PopWindowAnimStyle">
        <item name="android:windowShowAnimation">@anim/dialog_enter</item>
        <!-- 指定显示的动画xml  -->
        <item name="android:windowHideAnimation">@anim/dialog_exit</item>
        <!-- 指定消失的动画xml  -->
    </style>
</resources>
